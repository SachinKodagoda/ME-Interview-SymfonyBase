{% extends 'base.html.twig' %}

{% block title %}Hello BookController!{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('resources/css/book.css') }}">{% endblock %}

{% block body %}
    <div class="ui cards">
        {% for book in books %}
                <div class="card custom_card">
                    <a class="image" href="#">
                        <img src="{{ asset('resources/images/') }}{{ book.image }}" alt="books" class="book_image">
                    </a>
                    <div class="content">
                        <div class="header">{{ book.name }}</div>
                        <div class="meta"><a>Friends</a></div>
                        <div class="description">
                            {{ book.description }}
                        </div>
                    </div>
                    <div class="extra">
                        Rating:
                        <div class="ui star rating" data-rating="{{ book.rating }}"></div>
                    </div>
                    <div class="extra content">
                        <span class="right floated">{{ book.price }} LKR</span>
                        <span>
                            <i class="user icon"></i>75 sales
                        </span>
                    </div>
                </div>
        {% endfor %}
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('resources/js/book.js') }}"></script>
{% endblock %}
